{
  "manifest_version": 2,
  "name": "Image Saver",
  "description": "This extension shows user an icon to download images when mouse is hovering",
  "version": "0.1",

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "css": ["main.css"]
    }
  ],
  
  "browser_action": {
    "default_icon": "img.png",
    "default_popup": "popup.html",
    "default_title": "My extension"
  }
}